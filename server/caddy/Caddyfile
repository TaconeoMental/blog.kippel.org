blog.kippel.org {
    header {
        Server "kippel.org"
        Strict-Transport-Security "max-age=31536000; includeSubdomains; preload;"
        X-Content-Type-Options: "nosniff"
        Referrer-Policy "no-referrer-when-downgrade"
        Content-Security-Policy "base-uri 'self'; default-src 'self';"
        Cache-Control "no-cache, no-store, must-revalidate"
    }

    # Static files get cached for some time
    @static {
        file
        path *.map *.css *.js *.ico *.gif *.jpg *.jpeg *.png *.svg *.woff
    }
    handle @static {
        header Cache-Control "public, max-age=3600, must-revalidate"
    }

    log {
        output file /var/log/access.log
    }

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        rewrite @404 /404.html
        file_server
    }

    tls /usr/local/share/cf_certificate.pem /usr/local/share/cf_certificate.key
    encode zstd gzip
    root * /srv/
    file_server {
        hide .keep
    }
}
